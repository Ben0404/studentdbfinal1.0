﻿@{
    ViewBag.Title = "Welcome to the Student Database";
}

<!-- Main Container with Background Color -->
<main class="container mt-5" style="background-color: #f4f7fb; padding: 30px; border-radius: 8px;">
    <!-- Hero Section with Refined Banner Style -->
    <div class="jumbotron text-center bg-primary text-white shadow-lg rounded">
        <h1 class="display-4 font-weight-bold">Student Database</h1>
        <p class="lead">A seamless and efficient way to manage student information.</p>
        <p class="font-italic">Store, update, and track student data with ease, all in one place.</p>
    </div>

    <!-- Introduction Section -->
    <section class="text-center mb-5">
        <h2 class="text-primary font-weight-bold">Effortlessly Manage Student Records</h2>
        <p class="text-muted">Our platform helps you stay organized by allowing you to manage and access student data easily. Start viewing, updating, and adding student information in just a few clicks.</p>
    </section>

    <!-- Features Section with Equal Layout and Design -->
    <div class="row text-center">
        <!-- Feature 1: Manage Students -->
        <section class="col-md-6 mb-4">
            <div class="card shadow-lg border-light rounded h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h3 class="card-title text-dark">Manage Student Records</h3>
                    <p class="card-text text-muted">View, update, or delete student details. Stay organized with ease and access all necessary information in one place.</p>
                    <a href="@Url.Action("Index", "Student")" class="btn btn-outline-primary btn-lg w-100">View Students</a>
                </div>
            </div>
        </section>

        <!-- Feature 2: Add New Student -->
        <section class="col-md-6 mb-4">
            <div class="card shadow-lg border-light rounded h-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <h3 class="card-title text-dark">Add New Students</h3>
                    <p class="card-text text-muted">Easily add new students to the database and keep everything up-to-date. Quick and simple data entry.</p>
                    <a href="@Url.Action("Create", "Student")" class="btn btn-outline-success btn-lg w-100 mt-auto">Add Student</a>
                </div>
            </div>
        </section>
    </div>
</main>

<!-- Footer Section -->
<footer class="bg-dark text-white text-center py-3 mt-5">
    <p class="mb-0">&copy; 2025 Student Database. All Rights Reserved.</p>
</footer>