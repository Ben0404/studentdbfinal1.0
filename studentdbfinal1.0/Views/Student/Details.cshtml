﻿@model studentdbfinal1._0.Studentquery1

@{
    ViewBag.Title = "Details"; // Title can also be set from the controller
}

<!-- Page Wrapper with a soft blue background -->
<div class="container-fluid bg-light p-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Header with a bold blue background and white text -->
            <h2 class="text-center text-white bg-primary p-4 rounded mb-4 shadow-lg" style="font-size: 2rem;">
                Student Details
            </h2>

            <!-- Card with padding and shadow -->
            <div class="card shadow-lg p-4" style="background-color: #f0f8ff; border-radius: 10px;">
                <!-- Student Information -->
                <h4 class="text-primary mb-4">
                    <i class="fas fa-user"></i> Student Information
                </h4>

                <!-- Description List of Student Information -->
                <dl class="row">
                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Surname)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Surname)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.FirstName)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Age)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Age)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.BNumber)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.BNumber)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Telephone)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Telephone)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Address)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Address)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Assessment1Mark)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Assessment1Mark)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.Assessment2Mark)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.Assessment2Mark)
                    </dd>

                    <dt class="col-md-3">
                        @Html.DisplayNameFor(model => model.OverallModuleMark)
                    </dt>
                    <dd class="col-md-9">
                        @Html.DisplayFor(model => model.OverallModuleMark)
                    </dd>
                </dl>

                <!-- Action Buttons -->
                <div class="form-actions text-center">
                    <div class="mt-3">
                        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary btn-lg rounded-pill w-50" }) |
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-primary btn-lg rounded-pill" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}